@model ML.Inventario
@{
    ViewBag.Title = "FormAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Agrega un producto</h2>
<hr />
<div>
    @using (Html.BeginForm("FormAdd", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row mb-3">
            <div class="col col-4">
                <label>Nombre</label>
                @Html.TextBoxFor(model => model.Pruducto.Nombre, new { @class = "form-control", @placeholder="Nombre" })
            </div>
            <div class="col col-4">
                <label>Precio</label>
                @Html.TextBoxFor(model => model.Pruducto.Precio, new { @class = "form-control", @placeholder="0.0" })
            </div>
            <div class="col col-4">
                <div class="col col-4">
                    <label>Stock</label>
                    @Html.TextBoxFor(model => model.Stock, new { @class = "form-control", @placeholder = "0" })
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col col-4">
                <label>Asignar a tienda</label>
                @Html.DropDownListFor(model => model.Sucursal.IdSucursal, new SelectList(Model.Sucursal.Sucursales, "IdSucursal", "Nombre"), "Selecciona una sucursal", new { @class = "form-control" })
            </div>
        </div>
        <div>
            <a class="btn btn-danger" href="@Url.Action("GetAll", "Producto")">Volver</a>
            <button class="btn btn-success" type="submit">Guardar</button>
        </div>
    }
</div>