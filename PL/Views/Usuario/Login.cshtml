
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<h2 class="text-center">Iniciar sesión</h2>
<hr />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
<style>
    .centrar {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    body {
        background-image: url('../../Content/Images/background_login.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
        color: #FFFFFF;
    }
</style>
<div class="centrar">
    <form method="post" action="@Url.Action("Login","Usuario")">
        <div class="centrar">
            <p>Ingresa con tu usuario y contraseña.</p>
        </div>
        <div>
            <label>Username</label>
            <input class="form-control" name="username" placeholder="Username" />
        </div><br />
        <div>
            <label>Password</label>
            <input class="form-control" name="password" placeholder="Password" type="password" />
        </div><br />
        <div class="centrar">
            <button class="btn btn-success" type="submit">Ingresar</button>
        </div>
        <div>
            <label>¿No tienes una cuenta? <a href="@Url.Action("Form","Usuario")">Registrate</a></label>
        </div>
    </form>
</div>